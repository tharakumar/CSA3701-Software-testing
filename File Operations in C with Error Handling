#include <stdio.h>

int main() {
    FILE *file;

    // Open file to write
    file = fopen("data.txt", "w");
    if (file == NULL) {
        printf("Cannot open file to write.\n");
        return 1;
    }

    fprintf(file, "Hello, this is a test.\n");
    fclose(file);

    // Open file to read
    file = fopen("data.txt", "r");
    if (file == NULL) {
        printf("Cannot open file to read.\n");
        return 1;
    }

    char line[100];
    while (fgets(line, 100, file)) {
        printf("%s", line);
    }

    fclose(file);
    return 0;
}
